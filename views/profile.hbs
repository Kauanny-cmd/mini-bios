<h1>{{getName user}}</h1>
<h2>{{getBio user}}</h2>

{{#if (isOwnProfile currentUser user)}}
    <div class="pull-right">
        <a style=" color:#000000; margin-bottom: 4px;" href="/edit" class="nav-link btn btn-outline-info perfilBtn">Atualize seu perfil</a>
        <a style="color:#000000; margin-bottom: 4px;" href="/delete" class="nav-link btn btn-outline-danger perfilBtn">Excluir Perfil</a>
    </div>
{{/if}}

{{#if (getBio user)}}
    <p class="text-secondary">Cadastrou-se em {{getCreatedAt user}}</p>
{{/if}}

<a href="/">
        <button class="btn btn-outline-info">Voltar</button>
</a>